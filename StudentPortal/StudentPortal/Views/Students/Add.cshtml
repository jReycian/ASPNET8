@model StudentPortal.Models.AddStudentViewController;


<div class="container-md w-50 p-5 bg-light text-black rounded fw-bold">
    <h1 class="text-center text-uppercase">Add Students</h1>
    <hr />
    <form method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="" asp-for="Name" />
            <label for="floatingInput">Name</label>
        </div>

        <div class="form-floating mt-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="" asp-for="Email" />
            <label for="floatingInput">Email</label>
        </div>

        <div class="form-floating mt-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="" asp-for="Phone" />
            <label for="floatingInput">Contact Number</label>
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <input type="submit" class="btn btn-success" value="Save" />
            <input type="submit" class="btn btn-primary" value="Back" asp-controller="Students" asp-action="StudentList" />
        </div>
    </form>
</div>


<script type="text/javascript">
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })
</script>
