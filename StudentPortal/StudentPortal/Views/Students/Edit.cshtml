@{
}

@model StudentPortal.Models.Entities.Student



@if (Model == null)
{
    <h5>No Student found in the records!</h5>
}
else
{
    <div class="container-md w-50 p-5 bg-light text-black rounded text-uppercase fw-bold">

        <h1 class="text-center">Edit Students</h1>
        <hr />
        <form method="post">

            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mt-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" />

            </div>

            <div class="mt-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email" />
            </div>

            <div class="mt-3">
                <label class="form-label">Contact Number</label>
                <input type="text" class="form-control" asp-for="Phone" />
            </div>

            <div class="mt-3">
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
                <label class="form-check-label" for="Subscribed">Subscribed</label>
            </div>
            <hr />
            <div class="mt-3">
                <input type="submit" class="btn btn-success" value="Save" />
                <input type="submit"
                       class="btn btn-danger"
                       value="Delete"
                       asp-action="Delete"
                       asp-controller="Students" />

                <input type="submit"
                       class="btn btn-primary"
                       value="Back"
                       asp-action="StudentList"
                       asp-controller="Students" />
            </div>
        </form>
    </div>
}

